{{#features}}
	<li class="item">
		<div class="row">
			<div class="col-xs-4">
				<div class="title-feature">Circulation TER en hiver</div>
			</div>
			<div class="col-xs-offset-2 col-xs-6">
				<span class="critere glyphicon glyphicon-map-marker" aria-hidden="true"><span id="text">{{nom}}</span></span><span class="critere glyphicon glyphicon-calendar" aria-hidden="true" style="margin-left:10px;"><span id="text">{{annee}}</span></span>
			</div>	
		</div>
		<iframe class="iframe_bottom" src="http://kartenn.region-bretagne.fr/ws/transports/iframe_circulation_an.php?uic={{code_uic}}&time={{time_d}}"></iframe>
					
	</li>
		
{{/features}}

